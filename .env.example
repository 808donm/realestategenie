# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Direct database connection (for operations that bypass PostgREST)
# Get from: Supabase Dashboard > Settings > Database > Connection string (URI)
# Use the "Transaction" pooler connection string for serverless compatibility
DATABASE_URL=postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# App URL (use your custom domain)
NEXT_PUBLIC_APP_URL=https://www.realestategenie.app

# Resend (for sending invitation emails)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# GoHighLevel Integration (optional)
GHL_CLIENT_ID=your-ghl-client-id
GHL_CLIENT_SECRET=your-ghl-client-secret

# GoHighLevel SaaS Mode (for creating sub-accounts)
# Only needed if you want to automatically create GHL sub-accounts for new agents
GHL_COMPANY_ID=your-ghl-company-id
GHL_AGENCY_ACCESS_TOKEN=your-ghl-agency-access-token

# Trestle by CoreLogic (MLS Data)
# Get your credentials from your Trestle account manager
TRESTLE_CLIENT_ID=your-trestle-client-id
TRESTLE_CLIENT_SECRET=your-trestle-client-secret
TRESTLE_API_URL=https://api-prod.corelogic.com

# ATTOM Data API (Property Ownership & Public Records)
# Sign up for a free 30-day trial at https://api.developer.attomdata.com
# Find your API key under Account > Applications
# Note: Can also be configured via the admin Integrations page (stored in DB)
ATTOM_API_KEY=your-attom-api-key

# Federal Data Sources (optional, can also be configured via admin Integrations page)
# HUD USER API - Fair Market Rents, income limits, Section 8 data
# Free token: https://www.huduser.gov/hudapi/public/register
HUD_API_TOKEN=your-hud-api-token

# USPS - Address validation & vacancy indicators
# Register at: https://developers.usps.com
# USPS_CLIENT_ID=your-usps-client-id
# USPS_CLIENT_SECRET=your-usps-client-secret

# Census Bureau - Demographics & housing data (optional, increases rate limits)
# Free key: https://api.census.gov/data/key_signup.html
# CENSUS_API_KEY=your-census-api-key

# BLS - Employment & economic data (optional, increases daily query limit from 25 to 500)
# Free key: https://data.bls.gov/registrationEngine/
# BLS_API_KEY=your-bls-api-key
