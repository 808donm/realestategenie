<Page x:Class="ADMigrationTool.Views.DomainConnectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Domain Connection">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="8" MaxWidth="600" HorizontalAlignment="Left">
            <TextBlock x:Name="PageTitle" Text="Connect to Domain" FontSize="20" FontWeight="Bold" Margin="0,0,0,16" />

            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Domain Controller" FontWeight="SemiBold" Margin="0,0,0,4" />
                    <TextBox x:Name="DomainController" Margin="0,0,0,12" Padding="6" />

                    <TextBlock Text="Domain Name (FQDN)" FontWeight="SemiBold" Margin="0,0,0,4" />
                    <TextBox x:Name="DomainName" Margin="0,0,0,12" Padding="6" />

                    <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,4" />
                    <TextBox x:Name="Username" Margin="0,0,0,12" Padding="6" />

                    <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,4" />
                    <PasswordBox x:Name="Password" Margin="0,0,0,12" Padding="6" />

                    <CheckBox x:Name="UseSSL" Content="Use SSL/TLS (LDAPS)" Margin="0,0,0,12" />

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Test Connection" Padding="16,8" Margin="0,0,8,0"
                                Click="TestConnection_Click" Style="{StaticResource PrimaryButtonStyle}" />
                        <Button Content="Connect" Padding="16,8"
                                Click="Connect_Click" Style="{StaticResource PrimaryButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Connection Status -->
            <Border x:Name="StatusBorder" Visibility="Collapsed" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                <TextBlock x:Name="StatusMessage" TextWrapping="Wrap" />
            </Border>

            <!-- Domain Info (shown after connection) -->
            <Border x:Name="DomainInfoPanel" Visibility="Collapsed" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Domain Information" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Forest:" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ForestName" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Domain Level:" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DomainLevel" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Users:" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TotalUsers" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Total Groups:" FontWeight="SemiBold" />
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TotalGroups" />
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
