<Window x:Class="ADMigrationTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows AD Migration Tool" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MainWindowStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1a237e" Padding="16">
            <StackPanel>
                <TextBlock Text="Windows AD Migration Tool"
                           FontSize="24" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="Active Directory User &amp; Group Migration"
                           FontSize="14" Foreground="#bbdefb" Margin="0,4,0,0" />
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#f5f5f5" CornerRadius="4" Padding="8" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Navigation" FontWeight="SemiBold" FontSize="14" Margin="8,8,8,16" />
                    <Button Content="Dashboard" Style="{StaticResource NavButtonStyle}"
                            Click="NavDashboard_Click" />
                    <Button Content="Source Domain" Style="{StaticResource NavButtonStyle}"
                            Click="NavSourceDomain_Click" />
                    <Button Content="Target Domain" Style="{StaticResource NavButtonStyle}"
                            Click="NavTargetDomain_Click" />
                    <Button Content="Users &amp; Groups" Style="{StaticResource NavButtonStyle}"
                            Click="NavUsersGroups_Click" />
                    <Button Content="Migration Plan" Style="{StaticResource NavButtonStyle}"
                            Click="NavMigrationPlan_Click" />
                    <Button Content="Execute Migration" Style="{StaticResource NavButtonStyle}"
                            Click="NavExecuteMigration_Click" />
                    <Button Content="Reports" Style="{StaticResource NavButtonStyle}"
                            Click="NavReports_Click" />
                    <Button Content="Settings" Style="{StaticResource NavButtonStyle}"
                            Click="NavSettings_Click" />
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="White" CornerRadius="4"
                    BorderBrush="#e0e0e0" BorderThickness="1" Padding="16">
                <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" />
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#263238" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusText" Text="Ready" Foreground="#b0bec5" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" x:Name="SourceDomainLabel" Text="Source: Not Connected"
                           Foreground="#ef9a9a" Margin="16,0" VerticalAlignment="Center" />
                <TextBlock Grid.Column="2" x:Name="TargetDomainLabel" Text="Target: Not Connected"
                           Foreground="#ef9a9a" VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>
